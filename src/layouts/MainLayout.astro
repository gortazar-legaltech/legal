---
export interface Props {
  title?: string;
}
const { title = 'GORTÁZAR Legal Advisors' } = Astro.props;
---
<!DOCTYPE html>
<html lang="es" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="stylesheet" href={`${import.meta.env.BASE_URL}styles/global.css`} />
    <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}assets/favicon.svg`} />
  </head>
  <body class="font-sans text-base bg-white text-gray-900 dark:bg-gray-900 dark:text-white">
    <header class="p-4 bg-atlante-oscuro text-white">
      <nav class="flex justify-between items-center">
        <img src={`${import.meta.env.BASE_URL}assets/logo.png`} alt="Logo GORTÁZAR" class="h-10" />
        <ul class="flex gap-4">
          <li><a href={`${import.meta.env.BASE_URL}es/`}>Inicio</a></li>
          <li><a href={`${import.meta.env.BASE_URL}es/nosotros`}>Nosotros</a></li>
          <li><a href={`${import.meta.env.BASE_URL}es/servicios`}>Servicios</a></li>
          <li><a href={`${import.meta.env.BASE_URL}es/contacto`}>Contacto</a></li>
        </ul>
      </nav>
    </header>
    <main class="p-6">
      <slot />
    </main>
    <footer class="p-4 bg-atlante-oscuro text-white text-sm text-center">
      <p>© {new Date().getFullYear()} GORTÁZAR Legal Advisors</p>
      <a href={`${import.meta.env.BASE_URL}es/privacidad`} class="underline">Política de Privacidad</a>
    </footer>
  </body>
</html>
