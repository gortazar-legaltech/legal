---
const { title = 'Buffete Legal' } = Astro.props;
---
<!DOCTYPE html>
<html lang="es" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <!-- Favicon -->
    <link rel="icon" href="/src/assets/favicon.ico" sizes="any">
    <link rel="icon" type="image/svg+xml" href="/src/assets/favicon.svg" />
    <!-- Estilos -->
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body class="bg-gray-50 text-slate-900 dark:bg-slate-900 dark:text-white">
    <header class="p-4 bg-atlante-oscuro text-dorado-tenue">
      <div class="container mx-auto flex items-center justify-between">
        <!-- Logo con fallback -->
        <div class="logo">
          <img src="/src/assets/logo.svg" alt="Buffete Legal" class="h-10" onerror="this.style.display='none';" />
        </div>
        <nav>
          <ul class="flex space-x-4">
            <li><a href="/es/" class="hover:underline">Inicio</a></li>
            <li><a href="/es/nosotros" class="hover:underline">Nosotros</a></li>
            <li><a href="/es/servicios" class="hover:underline">Servicios</a></li>
            <li><a href="/es/contacto" class="hover:underline">Contacto</a></li>
          </ul>
        </nav>
      </div>
    </header>
    <main class="container mx-auto py-8">
      <slot />
    </main>
    <footer class="p-4 bg-atlante-oscuro text-center text-dorado-tenue">
      <p>&copy; {new Date().getFullYear()} Buffete Legal. Todos los derechos reservados.</p>
      <p><a href="/es/privacidad" class="hover:underline">Pol√≠tica de Privacidad y RGPD</a></p>
    </footer>
  </body>
</html>