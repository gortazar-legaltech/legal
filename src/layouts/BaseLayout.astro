// src/layouts/BaseLayout.astro
const { title = 'GORTÁZAR LegalTech' } = Astro.props;
---
<html lang="es" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body class="m-0 font-sans">
    <header class="p-4 bg-atlante-oscuro text-white">
      <h1 class="text-xl">GORTÁZAR LegalTech</h1>
    </header>
    <main class="p-4">
      <slot />
    </main>
    <footer class="p-4 bg-atlante-oscuro text-white text-sm">
      <p>© {new Date().getFullYear()} GORTÁZAR LegalTech. Todos los derechos reservados.</p>
    </footer>
  </body>
</html>
