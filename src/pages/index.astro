---
import { redirect } from 'astro/runtime/server'; // SSR redirection

export const prerender = true;
export async function get({ redirect }) {
  return redirect(`${import.meta.env.BASE_URL}es/`, 307); // Temporary redirect
}
---

<!-- SSR fallback -->
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="refresh" content="0; url=${import.meta.env.BASE_URL}es/" />
    <title>Redirigiendo...</title>
    <script>
      window.location.href = `${import.meta.env.BASE_URL}es/`;
    </script>
  </head>
  <body>
    <p>Redirigiendo a /es/...</p>
  </body>
</html>
